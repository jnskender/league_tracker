

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-login form-wrapper form-narrow mt-5 mb-5"}) do |f| %>
      <h3 class="title-divider">
        <span>Login</span>
        <small class="mt-4">Not signed up?
          <a href="<%= new_user_registration_path %>">Sign up here</a>.</small>
      </h3>
      <div class="form-group">
        <%= f.label :email, class:"sr-only" %>
          <br />
          <%= f.email_field :email, id:"login-email-page", class:"form-control email", placeholder: "Email", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"sr-only" %>
          <br />
          <%= f.password_field :password, id:"login-password-page", class:"form-control password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end -%>
          <button type="submit" class="btn btn-primary">Login</button>
          |
          <small>
            <a href="#">Forgotten Password?</a>
          </small>

            <% end %>

