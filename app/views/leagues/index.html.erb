<div class="container">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h1 class="text-center">Leagues</h1>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Zip</th>
            <th>Team limit</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @leagues.each do |league| %>
            <tr>
              <td>
                <%= league.name %>
              </td>
              <td>
                <%= league.zip %>
              </td>
              <td>
                <%= league.team_limit %>
              </td>
              <td>
                <%= link_to 'Show', league %>
              </td>
              <td>
                <%= link_to 'Edit', edit_league_path(league) %>
              </td>
              <td>
                <%= link_to 'Destroy', league, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New League', new_league_path %>
    </div>
    <% @leagues.each do |league| %>
      <div class="col-lg-12">
        <!-- Product 5 -->
        <div class="card product-card mb-4 card-outline-danger">
          <!-- Ribbon -->
          <div class="card-ribbon card-ribbon-bottom card-ribbon-right bg-danger text-white"><%= league.team_limit %></div>
          <!-- Content -->
          <div class="card-body p-3 pos-relative row">
            <!-- Image content -->
            <div class="col-md-4 mb-2 mb-md-0">
              <%= image_tag  "soccer.jpg", class:"rounded img-fluid" %>
            </div>
            <!-- Product details -->
            <div class="col-md-8 d-flex flex-column align-items-start">
              <h4 class="card-title mb-2">
                <%= link_to league.name , league %>
              </h4>
              <p class="font-weight-bold"><%= league.zip %></p>
              <p class="text-muted text-xs">Exputo facilisi hendrerit refero. Accumsan blandit caecus euismod eum minim venio.</p>
              <div class="mt-auto">
                <a href="shop-cart.html" class="btn btn-primary btn-sm">
                  <i class="fa fa-cart-plus mr-2"></i> Add to Cart</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>