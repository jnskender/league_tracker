
<%= form_for([@league, @team],:html => {:class => "form-login form-wrapper form-medium mt-3", :role => "form"}) do |f| %>


  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <h3 class="title-divider">
      <span>Create Your Team</span>
    </h3>
    <hr />
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control", placeholder:"Team Name", autofocus:"true" %>
  </div>

  <div class="form-group">
    <%= f.label :coach_id %>
    <%= f.text_field :coach_id, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :player_count %>
    <%= f.number_field :player_count, min:1, max: 12, class:"form-control" %>
  </div>

  <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
  </div>
<% end %>